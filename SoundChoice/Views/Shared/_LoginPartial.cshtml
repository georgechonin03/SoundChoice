@inject Microsoft.AspNetCore.Identity.SignInManager<SoundChoice.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-black nav-link">Hello @User.Identity.Name</li>
             <li ><a class="text-black nav-link" href="javascript:document.getElementById('logoutForm').submit()">
             Sign Out </a>
             </li>
             <a asp-action="Upload" asp-controller="Sound" id="uploadLink"> <li class="btn bg-success text-white" >Upload</li> </a>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-black" asp-action="Register" asp-controller="Account" id="registerLink">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-action="Login" asp-controller="Account" id="loginLink">Sign In</a>
        </li>
    </ul>
}