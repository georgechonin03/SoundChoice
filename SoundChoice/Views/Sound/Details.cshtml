@model SoundChoice.Models.ViewModels.UploadViewModel
@inject Microsoft.AspNetCore.Identity.SignInManager<SoundChoice.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <h2>Upload</h2>
    <form id="sound" method="post" asp-action="Upload" asp-controller="Sound">
    <h4>Enter your file's properties so it can be found easily.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class=form-group row>
            <label asp-for="Title" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
    </div>
    <div class=form-group row>
        <label asp-for="Type" class=col-md-2></label>
        <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
   <div class=form-group row>
        <label asp-for="Genre" class=col-md-2></label>
        <div class="col-md-10">
                <input asp-for="Genre" class="form-control" />
        </div>
    </div>
    <div class=form-group row>
        <label asp-for="BPM" class=col-md-2></label>
        <div class="col-md-10">
                <input asp-for="BPM" class="form-control" />
        </div>
    </div>
   
   
    </form>
    
}
else
{
    <p>Sign in to upload</p>
}
