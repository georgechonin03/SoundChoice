@model SoundChoice.Models.AudioFiles
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">SoundChoice</h1>
</div>

<div class="select2-container">
    
        <form class="form-inline my-2 my-lg-0">
            <form id="search" method="get" asp-action="Search" asp-controller="Home">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>    
        </form>
         <form class="form-inline my-2 my-lg-0">
        @foreach(var file in Model.Files)
        {
            <label style="padding-top:40px;">@file</label>
            <audio controls style="width: 100%; padding: 10px 0 10px 0;">
                <source src="~/Uploads/@file"/>
            </audio>
        }
    </form>
</div>
